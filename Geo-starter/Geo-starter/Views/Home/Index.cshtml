@{
    ViewBag.Title = "Index";
    ViewBag.text = "Hallo World";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/StyleSheet1.css" />
</head>
<body>
    <div id="banner" class="banner navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-5">
            <img src="~/Content/icon/nature.jpg" style="width: 100%;">
        </div>
    </div>

    <section id="video" class="video-section">
        <div class="container py-5 px-5">
            <h1>Videos | <a class="navigation-a" href="#">view all videos</a></h1>
            <div class="video-block row mt-4">
                <div class="col-lg-6 col-md-12">
                    <iframe width="100%" height="315" src="https://www.youtube.com/embed/DTRRut-VLbg" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
                <div class="col-lg-6 col-md-12">
                    <iframe width="100%" height="315" src="https://www.youtube.com/embed/DTRRut-VLbg" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </section>

    <div id="news" class="container" style="margin-top:50px;">
        <div class="row">
            @{
                for (int i = 0; i < 8; i++)
                {
                    <div class="image-cont col-lg-3 col-md-6 .col-sm-12 mt-4">
                        <img src="~/Content/icon/tiger.jpg" style="width: 100%;">
                        <h1 class="h1" style="font-family: 'ALKDots'; text-align:center;background-color:lightgray; margin-top:0;">Tiger</h1>
                    </div>
                }
            }
        </div>
    </div>
</body>
</html>